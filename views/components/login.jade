block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .form-body
                    ul.nav.nav-tabs.final-login
                        li(ng-class="{'active': $ctrl.showSignIn, '': !$ctrl.showSignIn}")
                            a(ng-click="$ctrl.showSignIn = true") Sign In
                        li(ng-class="{'active': !$ctrl.showSignIn, '': $ctrl.showSignIn}")
                            a(ng-click="$ctrl.showSignIn = false") Join us!
                    .tab-content
                        #sectionA.tab-pane.fade.in(ng-class="{'active': $ctrl.showSignIn, '': !$ctrl.showSignIn}")
                            .innter-form
                                form.sa-innate-form(method='post')
                                    label Email Address
                                    input(type='text', name='username', ng-model="$ctrl.username")
                                    label Password
                                    input(type='password', name='password', ng-model="$ctrl.password")
                                    button(type="button", ng-click="$ctrl.auth()") Sign In
                                    a(href='') Forgot Password?
                            .social-login
                                p Sign in with
                                ul
                                    li
                                        a(href='')
                                            i.fa.fa-facebook
                                            |  Facebook
                                    li
                                        a(href='')
                                            i.fa.fa-google-plus
                                            |  Google+
                                    li
                                        a(href='')
                                            i.fa.fa-twitter
                                            |  Twitter
                            .clearfix
                        #sectionB.tab-pane.fade.in(ng-class="{'active': !$ctrl.showSignIn, '': $ctrl.showSignIn}")
                            .innter-form
                                form.sa-innate-form(method='post')
                                    label Name
                                    input(type='text', name='username')
                                    label Email Address
                                    input(type='text', name='username')
                                    label Password
                                    input(type='password', name='password')
                                    button(type='submit') Join now
                                    p
                                        | By clicking Join now, you agree to Mplay's User Agreement, Privacy Policy, and Cookie Policy.