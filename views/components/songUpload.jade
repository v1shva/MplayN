p {{showUpload}}
.modal-dialog
    #addsongContent.modal-content
        .modal-header
            h4.modal-title Add your Song
        .modal-body
            .form-group
                label Song Title:
                input#title.form-control(onfocusout='validateTitle(this)', type='text', title='tooltip')
                #titleLoader.cssload-thecube(style='display: none')
                    .cssload-cube.cssload-c1
                    .cssload-cube.cssload-c2
                    .cssload-cube.cssload-c4
                    .cssload-cube.cssload-c3
            .form-group.ui-widget
                label Artist:
                input#artist.form-control(onfocusout='validateArtist(this);validateArtistAndTitle()', type='text', title='tooltip')
            .form-group.ui-widget
                label#moodLable Mood:
                .container-fluid.moods
                    emo-bar
            .form-group.songupload
                ul.nav.nav-tabs(role='tablist')
                    li.active(role='presentation', ng-class="{'active': $ctrl.showUpload, '': !$ctrl.showUpload}")
                        a(role='tab',ng-click="$ctrl.showUpload = true") Upload File
                    li(role='presentation', ng-class="{'active': !$ctrl.showUpload, '': $ctrl.showUpload}")
                        a(role='tab',ng-click="$ctrl.showUpload = false") URL
                .tab-content
                    #url.tab-pane.active(role='tabpanel',ng-class="{'active': $ctrl.showUpload, '': !$ctrl.showUpload}")
                        .form-group
                            .form-group
                                input#fileup.file(type='file')
                    #upfile.tab-pane(role='tabpanel', ng-class="{'active': !$ctrl.showUpload, '': $ctrl.showUpload}")
                        label URL:
                        input.form-control(type='text')
            #uploadErrorMsg.form-group.ui-widget(style='display: none')
                label
            .checkbox
                label
                    input(type='checkbox', onchange='agree(this)')
                    |  I agree to the terms and conditions of the MPlay web app.
        .modal-footer
            button#submitdata.btn.btn-default.fileinput-upload.fileinput-upload-button(type='submit', disabled='') Submit
            button#closeFromBottom.btn.btn-default(type='button', data-dismiss='modal') Close
