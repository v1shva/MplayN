.mainbody.container-fluid
    .row
        div(style='padding-top:50px;') Â 
        .col-lg-3.col-md-3.col-sm-3.hidden-xs
            .panel.panel-default.panel-menu
                .panel-body
                    a(ui-sref='adminSongs')
                        span.divtoLink
                    h1.panel-title.pull-right(style='font-size:20px;')
                        i.fa.fa-cogs(aria-hidden='true')
                        |  Reported Songs
                        | &nbsp;
                        span.glyphicon.glyphicon-alert
            .panel.panel-default.panel-menu.panel-active
                .panel-body
                    a(ui-sref='adminUsers')
                        span.divtoLink
                    h1.panel-title.pull-right(style='font-size:20px;')
                        i.fa.fa-cogs(aria-hidden='true')
                        |  Current Users
                        | &nbsp;
                        span.glyphicon.glyphicon-user

        .col-lg-9.col-md-9.col-sm-9.col-xs-12
            .panel.panel-default
                .panel-body
                    h1.panel-title.pull-left(style='font-size:20px;') Current Users


            .panel.panel-default
                .panel-body
                    .panel-title.pull-left
                    strong Selected Users :
                    button.btn.btn-danger()
                        span.glyphicon.glyphicon-remove
                        | &nbsp;
                        | Delete
                    br
                    hr
                    table.table.table-hover
                        thead
                            tr
                                th Select
                                th Username
                                th Email
                                th Country
                                th Image
                        tbody
                            tr(ng-repeat='user in $ctrl.users')
                                td
                                    input(type='checkbox', checked='')
                                td {{user.username}}
                                td {{user.email}}
                                td {{user.country}}
                                td
                                    img.img-responsive.img-circle(ng-src='{{user.imageURL}}', width='30px', height='30px')
                            tr
                                td Mary
                                td Moe
                                td mary@example.com
                            tr
                                td July
                                td Dooley
                                td july@example.com
